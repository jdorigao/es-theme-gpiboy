<theme>
    <formatVersion>7</formatVersion>
	<view name="system">
		<text name="manufacturerName" extra="static">
            <text>${system.sortedBy}</text>
            <alignment>left</alignment>
            <fontPath>${fontTextBase}</fontPath>
            <fontSize>0.07</fontSize>
            <pos>0.029 0.02</pos>
            <size>0.942 0.2</size>
            <color>${colorTextBase}</color>
            <zIndex>100</zIndex>
        </text>

        <text name="releaseYyear" extra="true">
            <text>${system.releaseYearOrNull}</text>
            <alignment>left</alignment>
            <fontPath>${fontTextBase}</fontPath>
            <fontSize>0.05</fontSize>
            <pos>0.03 0.08</pos>
            <size>0.94 0.2</size>
            <color>${colorTextBase}</color>
            <zIndex>100</zIndex>
        </text>

		<text name="systemInfo">
			<alignment>right</alignment>
            <fontPath>${fontTextBase}</fontPath>
            <fontSize>0.05</fontSize>
            <pos>0.029 0.02</pos>
            <size>0.94 0.2</size>
            <color>${colorTextBase}</color>
            <zIndex>100</zIndex>
		</text>

		<image name="controller" extra="true">
			<path>./../art/controller/${system.theme}.svg</path>
			<color>${colorTextBase}</color>
			<pos>0.5 0.45</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.45 0.45</maxSize>
      	</image>

		<carousel name="systemcarousel">
			<color>FAFAFF00</color>
			<colorEnd>FAFAFF00</colorEnd>
			<pos>0.5 0.8</pos>
			<origin>0.5 0.5</origin>
			<logoSize>0.8 0.22</logoSize>
			<maxLogoCount>1</maxLogoCount>
		</carousel>

		<text name="logoText">
			<fontPath>${fontTextBase}</fontPath>
			<fontSize>0.08</fontSize>
			<color>${colorTextBase}</color>
			<forceUppercase>true</forceUppercase>
		</text>

		<image name="carousel-inner" extra="true">
			<visible>false</visible>
		</image>

		<image name="carousel-shadow" extra="true">
			<visible>false</visible>
		</image>
	</view>
</theme>
