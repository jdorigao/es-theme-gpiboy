<?xml version="1.0" encoding="UTF-8" ?>
<!--
theme name:		GPIBoy
author:			Juliano Dorigão
-->

<theme>
    <formatVersion>7</formatVersion>
    <view name="detailed">
        <carousel name="systemcarousel">
			<color>FAFAFF00</color>
			<colorEnd>FAFAFF00</colorEnd>			
			<maxLogoCount>1</maxLogoCount>
		</carousel>

		<text name="logoText">
			<fontPath>./fonts/arcade.ttf</fontPath>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.14</pos>
			<fontSize>0.053</fontSize>
			<color>002105</color>
			<alignment>center</alignment>
			<forceUppercase>true</forceUppercase> 
		</text>

		<image name="BottomTitle" extra="static">
			<tile>false</tile>
			<size>1 0.007</size>
			<pos>0 0.19</pos>
			<origin>0 1</origin>
			<path>./../art/images/bottom-up.png</path>
			<zIndex>50</zIndex>
		</image>
        
        <textlist name="gamelist">
			<origin>0 0.5</origin>
			<pos>0 0.575</pos>
			<size>0.6 0.75</size>
            <alignment>left</alignment>
			<selectorColor>003E0A</selectorColor> <!-- Selection bar -->
			<selectedColor>94A594</selectedColor> <!-- Selection letters -->
			<primaryColor>002105</primaryColor> <!-- Letters -->
			<fontPath>./fonts/arcade.ttf</fontPath>
			<fontSize>0.048</fontSize>
			<horizontalMargin>0.03</horizontalMargin>
			<scrollSound>./art/sound/scroll.wav</scrollSound>
		</textlist>

        <video name="md_video">
            <origin>0.5 0.5</origin>
            <pos>0.8 0.44</pos>            
			<maxSize>0.3 0.3</maxSize>
            <delay>1.4</delay>
            <showSnapshotNoVideo>true</showSnapshotNoVideo>
            <showSnapshotDelay>true</showSnapshotDelay>
            <loops>1</loops>
            <roundCorners>0.02</roundCorners>
            <zIndex>30</zIndex>
        </video>

        <rating name="md_rating">
            <origin>0.5 0.5</origin>
            <pos>0.73 0.7</pos>
            <size>0.06 0.06</size>
            <horizontalAlignment>center</horizontalAlignment>
            <color>00D424</color>
            <unfilledColor>003E0A</unfilledColor>
            <unfilledPath>:/star_filled.svg</unfilledPath>
        </rating>
    </view>
</theme>
