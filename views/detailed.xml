<?xml version="1.0" encoding="UTF-8" ?>
<!--
theme name:		GPIBoy
author:			Juliano Dorigão
-->

<theme>
    <formatVersion>7</formatVersion>
    <view name="detailed">
        <textlist name="gamelist">
			<pos>0 0.5</pos>
			<origin>0 0.5</origin>
			<size>0.55 0.83</size>
            <alignment>left</alignment>
			<selectorColor>${colorBackground}</selectorColor>
			<selectedColor>${selectedColorBase}</selectedColor>
			<primaryColor>${colorTextBase}</primaryColor>
			<selectorGradientType>horizontal</selectorGradientType>
			<fontPath>${fontTextBase}</fontPath>
			<fontSize>0.04</fontSize>
			<horizontalMargin>0.03</horizontalMargin>
		</textlist>

        <video name="md_video">
            <pos>0.775 0.44</pos>
            <origin>0.5 0.5</origin>
            <size>0.44 0.7</size>
            <delay>1.4</delay>
            <showSnapshotNoVideo>true</showSnapshotNoVideo>
            <showSnapshotDelay>true</showSnapshotDelay>
            <loops>1</loops>
            <zIndex>30</zIndex>
        </video>

        <rating name="md_rating">
			<pos>0.89 0.82</pos>
            <origin>0.5 0</origin>
			<size>0.44 0.06</size>
            <color>${colorTextBase}</color>
			<filledPath>./art/images/rating_filled.svg</filledPath>
			<unfilledPath>./art/images/rating_empty.svg</unfilledPath>
		</rating>
    </view>
</theme>
