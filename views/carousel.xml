<theme>
    <formatVersion>7</formatVersion>
    <feature supported="carousel">
		<view name="system">
			<carousel name="systemcarousel">
                <color>FAFAFF00</color>
                <colorEnd>FAFAFF00</colorEnd>
                <size>1 1</size>
                <pos>0 0</pos>
                <origin>0 0</origin>
                <logoSize>0.8 0.3</logoSize>
                <maxLogoCount>1</maxLogoCount>
            </carousel>

            <text name="logoText">
                <fontPath>./fonts/arcade.ttf</fontPath>
                <fontSize>0.08</fontSize>
                <color>002105</color>
                <forceUppercase>true</forceUppercase> 
            </text>
    
            <text name="systemInfo">
                <fontPath>./fonts/arcade.ttf</fontPath>
                <backgroundColor>00000000</backgroundColor>
                <color>002105</color>
                <pos>0 0.75</pos>
                <size>0.95 0.05</size>
                <fontSize>0.045</fontSize>
                <alignment>center</alignment>
            </text>
    
            <image name="carousel-inner" extra="true">
                <visible>false</visible>
            </image>
            
            <image name="carousel-shadow" extra="true">
                <visible>false</visible>
            </image>
		</view>
	</feature>
</theme>