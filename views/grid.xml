<?xml version="1.0" encoding="UTF-8" ?>
<!--
theme name:		GPIBoy
author:			Juliano Dorigão
-->

<theme defaultView="grid">
    <formatVersion>7</formatVersion>       
   
    <view name="grid">
        <imagegrid name="gamegrid">
            <autoLayout>1 1</autoLayout>
            <size>1 0.73</size>            
            <pos>0 0.19</pos>
            <padding>0 0</padding>
            <margin>0 0</margin>
            <autoLayoutSelectedZoom>1.02</autoLayoutSelectedZoom>
            <imageSource>image</imageSource>
            <margin>0.002 0.004</margin>
            <showVideoAtDelay>800</showVideoAtDelay>
            <zIndex>13</zIndex>
            <scrollDirection>horizontal</scrollDirection>
            <centerSelection>true</centerSelection>
            <scrollLoop>true</scrollLoop>
        </imagegrid>

        <gridtile name="default">
            <imageSizeMode>minSize</imageSizeMode>
            <backgroundCornerSize>0 0</backgroundCornerSize>
            <padding>0 0</padding>
        </gridtile>
        
        <gridtile name="selected">
            <backgroundColor>00000000</backgroundColor>
            <backgroundCenterColor>00000000</backgroundCenterColor>
            <backgroundEdgeColor>00000000</backgroundEdgeColor>
            <backgroundCornerSize>0 0</backgroundCornerSize>
            <padding>0 0</padding>
        </gridtile>

        <image name="gridtile.marquee">
            <color>FFFFFFD0</color>
            <pos>0.5 0.5</pos>
            <origin>0.5 0.5</origin>
            <size>0.50 0.50</size>
        </image>

        <image name="gridtile.marquee:selected">
            <color>FFFFFFFF</color>
            <size>0.65 0.65</size>
        </image>

        <image name="gridtile.marquee:videoplaying">
            <color>FFFFFFA0</color>
            <pos>0.5 0.17</pos>
            <size>0.50 0.25</size>
        </image>

        <text name="gridtile.text">
            <pos>0 0</pos>
            <size>1 1</size>
            <fontSize>0.040</fontSize>
            <padding>0.1 0</padding>
        </text>
    </view>
</theme>
