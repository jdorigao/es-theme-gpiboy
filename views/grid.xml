<?xml version="1.0" encoding="UTF-8" ?>
<!--
theme name:		GPIBoy
author:			Juliano Dorigão
-->

<theme defaultView="grid">
    <formatVersion>7</formatVersion>       
    <view name="grid">
        <imagegrid name="gamegrid">
            <origin>0.5 0.5</origin>
            <pos>0 0.18</pos>
            <size>1 0.8</size>
            <autoLayout>1 1</autoLayout>
            <scrollDirection>horizontal</scrollDirection>
            <centerSelection>true</centerSelection>
            <scrollLoop>true</scrollLoop>
            <scrollSound>./art/sound/scroll.wav</scrollSound>
        </imagegrid>

        <text name="gridtile">
            <fontPath>${fontTextBase}</fontPath>
            <fontSize>0.05</fontSize>
            <color>${colorTextBase}</color>
            <alignment>center</alignment>
        </text>

        <gridtile name="default">
            <selectionMode>image</selectionMode>
            <backgroundCenterColor>00000000</backgroundCenterColor>
            <backgroundEdgeColor>00000000</backgroundEdgeColor>
        </gridtile>

        <gridtile name="selected">
            <backgroundCenterColor>00000000</backgroundCenterColor>
            <backgroundEdgeColor>00000000</backgroundEdgeColor>
        </gridtile>
    </view>    
</theme>
