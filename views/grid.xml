<?xml version="1.0" encoding="UTF-8" ?>
<!--
theme name:		GPIBoy
author:			Juliano Dorigão
-->

<theme defaultView="grid">
    <formatVersion>7</formatVersion>       
    <view name="grid">
        <imagegrid name="gamegrid">
            <autoLayout>1 1</autoLayout>
            <origin>0.5 0.5</origin>
            <pos>0 0.2</pos>
            <size>1 0.7</size>
            <scrollDirection>horizontal</scrollDirection>
            <centerSelection>true</centerSelection>
            <scrollLoop>true</scrollLoop>
            <scrollSound>./art/sound/scroll.wav</scrollSound>
        </imagegrid>

        <gridtile name="default">
            <selectionMode>image</selectionMode>
            <backgroundCenterColor>00000000</backgroundCenterColor>
            <backgroundEdgeColor>00000000</backgroundEdgeColor>
        </gridtile>

        <text name="gridtile">
            <visible>false</visible>
            <alignment>center</alignment>
            <verticalAlignment>center</verticalAlignment>
        </text>

        <text name="gridtile:selected">
            <visible>false</visible>
        </text>

        <image name="gridtile.favorite">
            <path>./art/images/favorite.png</path>
            <pos>0.91 0.09</pos>
            <maxSize>0.14 0.14</maxSize>
            <origin>0.5 0.5</origin>
            <horizontalAlignment>right</horizontalAlignment>
            <color>FFFF00B0</color>
        </image>
    </view>
</theme>
