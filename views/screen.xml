<theme>
    <formatVersion>7</formatVersion>
    <view name="screen">
	  	<controllerActivity name="controllerActivity">
			<pos>0.01 0.01</pos>
            <origin>0.5 0.5</origin>
			<size>0.07 0.03</size>
			<itemSpacing>0.003</itemSpacing>
			<color>${colorTextBase}</color>
			<imagePath>./../art/icons/gamepad.svg</imagePath>
			<activityColor>003E0A</activityColor>
			<hotkeyColor>82A314</hotkeyColor>
		</controllerActivity>

		<batteryIndicator name="batteryIndicator">
			<color>${colorTextBase}</color>
			<pos>0.73 0.012</pos>
			<origin>0.5 0.5</origin>
			<size>0.04 0.05</size>
            <full>./../art/icons/battery/full.svg</full>
			<at75>./../art/icons/battery/75.svg</at75>
			<at50>./../art/icons/battery/50.svg</at50>
			<at25>./../art/icons/battery/25.svg</at25>
			<empty>./../art/icons/battery/empty.svg</empty>
			<alignment>right</alignment>
		</batteryIndicator>

		<text name="clock">
			<pos>0.9 0.04</pos>
			<origin>0.5 0.5</origin>
			<size>0.18 0.1</size>
			<fontPath>${fontTextClock}</fontPath>
			<fontSize>0.05</fontSize>
			<color>${colorTextBase}</color>
			<alignment>center</alignment>
			<verticalAlignment>center</verticalAlignment>
    	</text>
	</view>
</theme>
