<theme>
    <formatVersion>7</formatVersion>
    <view name="screen">
	  	<controllerActivity name="controllerActivity">
			<pos>0.01 0.003</pos>
			<size>0.07 0.05</size>
			<itemSpacing>0.003</itemSpacing>
			<color>${colorTextBase}</color>
			<imagePath>./art/icons/gamepad.svg</imagePath>
			<activityColor>003E0A</activityColor>
			<hotkeyColor>82A314</hotkeyColor>
		</controllerActivity>		
	
		<batteryIndicator name="batteryIndicator">
			<pos>0.7 0.003</pos>
			<size>0.08 0.08</size>
			<incharge>./../art/battery/incharge.svg</incharge>
			<full>./../art/battery/full.svg</full>
			<at75>./../art/battery/75.svg</at75>
			<at50>./../art/battery/50.svg</at50>
			<at25>./../art/battery/25.svg</at25>
			<empty>./../art/battery/empty.svg</empty>
			<color>${colorTextBase}</color>
			<alignment>center</alignment>
			<verticalAlignment>center</verticalAlignment>
		</batteryIndicator>

		<text name="clock">
			<pos>0.79 0.004</pos>
			<size>0.21 0.065</size>	
			<fontPath>${fontTextClock}</fontPath>
			<fontSize>0.054</fontSize>
			<color>${colorTextBase}</color>
			<alignment>center</alignment>
			<verticalAlignment>center</verticalAlignment>
    	</text>
	</view>
</theme>