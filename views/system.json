{
  "formatVersion": 7.0,
  "nodes": [
    {
      "type": "view",
      "name": "system",
      "elements": [
        {
          "type": "text",
          "name": "manufacturerName",
          "extra": "static",
          "props": [
            {
              "name": "color",
              "value": "${colorTextBase}"
            },
            {
              "name": "text",
              "value": "${system.sortedBy}"
            },
            {
              "name": "alignment",
              "value": "left"
            },
            {
              "name": "fontPath",
              "value": "${fontTextBase}"
            },
            {
              "name": "fontSize",
              "value": "0.07"
            },
            {
              "name": "pos",
              "value": "0.03 0.05"
            },
            {
              "name": "size",
              "value": "0.693 0"
            }
          ]
        },
        {
          "type": "text",
          "name": "releaseYyear",
          "extra": true,
          "props": [
            {
              "name": "color",
              "value": "${colorTextBase}"
            },
            {
              "name": "text",
              "value": "${system.releaseYearOrNull}"
            },
            {
              "name": "alignment",
              "value": "left"
            },
            {
              "name": "fontPath",
              "value": "${fontTextBase}"
            },
            {
              "name": "fontSize",
              "value": "0.05"
            },
            {
              "name": "pos",
              "value": "0.03 0.12"
            },
            {
              "name": "size",
              "value": "0.2 0"
            }
          ]
        },
        {
          "type": "text",
          "name": "systemInfo",
          "props": [
            {
              "name": "color",
              "value": "${colorTextBase}"
            },
            {
              "name": "alignment",
              "value": "right"
            },
            {
              "name": "fontPath",
              "value": "${fontTextBase}"
            },
            {
              "name": "fontSize",
              "value": "0.05"
            },
            {
              "name": "pos",
              "value": "0.7 0.065"
            },
            {
              "name": "size",
              "value": "0.28 0"
            }
          ]
        },
        {
          "type": "text",
          "name": "logoText",
          "props": [
            {
              "name": "color",
              "value": "${colorTextBase}"
            },
            {
              "name": "fontPath",
              "value": "${fontTextBase}"
            },
            {
              "name": "fontSize",
              "value": "0.08"
            },
            {
              "name": "forceUppercase",
              "value": true
            }
          ]
        },
        {
          "type": "image",
          "name": "logo",
          "props": [
            {
              "name": "color",
              "value": "${colorLogoBase}"
            },
            {
              "name": "path",
              "value": "./../art/system/${system.theme}.svg"
            }
          ]
        },
        {
          "type": "carousel",
          "name": "systemcarousel",
          "props": [
            {
              "name": "color",
              "value": "FAFAFF00"
            },
            {
              "name": "colorEnd",
              "value": "FAFAFF00"
            },
            {
              "name": "pos",
              "value": "0 0"
            },
            {
              "name": "size",
              "value": "1 1"
            },
            {
              "name": "logoSize",
              "value": "0.5 0.5"
            },
            {
              "name": "maxLogoCount",
              "value": "1"
            }
          ]
        }
      ]
    }
  ]
}
