<theme>
	<formatVersion>7</formatVersion>	
    <include>./views/screen.xml</include>
    <include>./views/carousel.xml</include>
    <include>./views/help.xml</include>
    <include>./views/menu.xml</include>
    <include>./views/basic.xml</include>
    <include>./views/detailed.xml</include>
    
    <view name="system, basic, detailed">
        <image name="background" extra="true">
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
            <path>./art/images/bg.png</path>
            <zIndex>0</zIndex>
        </image>
    </view>

    <view name="system">
        <text name="manufacturerName" extra="static">
            <text>${system.sortedBy}</text>
            <alignment>left</alignment>
            <verticalAlignment>top</verticalAlignment>
            <fontPath>./fonts/futura-bold-italic-bt.ttf</fontPath>
            <fontSize>0.05</fontSize>
            <pos>0.029 0.06</pos>
            <size>0.942 0.28</size>
            <color>003E0A</color>      
            <zIndex>100</zIndex>
        </text>

        <text name="releaseYyear" extra="true">
            <text>${system.releaseYearOrNull}</text>
            <alignment>left</alignment>
            <verticalAlignment>top</verticalAlignment>
            <fontPath>./fonts/futura-bold-bt.ttf</fontPath>
            <fontSize>0.035</fontSize>
            <pos>0.03 0.15</pos>
            <size>0.94 0.28</size>
            <color>003E0A</color>       
            <zIndex>100</zIndex>
        </text> 
    </view>
</theme>