<theme>
    <formatVersion>7</formatVersion>
    <variables>
        <baseColor>000000</baseColor>
        <backgroundColor>9eb816</backgroundColor>
    </variables>

    <view name="splash">
        <text name="batocera" extra="true">
            <text>BATOCERA</text>
            <pos>0.5 0.5</pos>
            <origin>0.5 0.5</origin>
            <color>${baseColor}</color>
            <fontPath>./fonts/arcade.ttf</fontPath>
            <fontSize>0.18</fontSize>
            <alignment>center</alignment>
            <verticalAlignment>center</verticalAlignment>
        </text>

        <image name="progressbar">
            <color>4246427F</color>
            <colorEnd>4246427F</colorEnd>
            <roundCorners>0.02</roundCorners>
        </image>

        <image name="progressbar:active">
            <tile>true</tile>
            <color>${baseColor}</color>
        </image>

        <image name="background">
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
            <path>./art/images/bg.png</path>
            <zIndex>0</zIndex>
        </image>

        <text name="label">
            <color>${baseColor}</color>
            <fontPath>./fonts/arcade.ttf</fontPath>
        </text>
    </view>
</theme>
