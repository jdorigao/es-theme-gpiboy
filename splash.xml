author:			Juliano DorigÃ£o
-->
<theme>
    <formatVersion>7</formatVersion>
    <include
        subset="colorset"
        name="default"
        displayName="Default"
    >./colorsets/default.xml</include>
    <include
        subset="colorset"
        name="dark"
        displayName="Dark"
    >./colorsets/dark.xml</include>
    <include
        subset="colorset"
        name="light"
        displayName="Light"
    >./colorsets/light.xml</include>

    <view name="splash">
        <text name="gpiboy" extra="true">
            <text>GPIBoy</text>
            <pos>0.5 0.5</pos>
            <origin>0.5 0.5</origin>
            <color>${colorTextBase}</color>
            <fontPath>./fonts/arcade.ttf</fontPath>
            <fontSize>0.20</fontSize>
            <alignment>center</alignment>
            <verticalAlignment>center</verticalAlignment>
        </text>

        <image name="progressbar">
            <color>4246427F</color>
            <colorEnd>4246427F</colorEnd>
            <roundCorners>0.02</roundCorners>
        </image>

        <image name="progressbar:active">
            <tile>true</tile>
            <color>${colorTextBase}</color>
        </image>

        <image name="background">
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
            <path>./art/images/bg.png</path>
            <zIndex>0</zIndex>
            <color>${colorBackground}</color>
        </image>

        <text name="label">
            <color>${colorTextBase}</color>
            <fontPath>./fonts/arcade.ttf</fontPath>
        </text>
    </view>
</theme>
